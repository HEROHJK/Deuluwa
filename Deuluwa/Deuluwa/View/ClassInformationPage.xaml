<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Deuluwa.ClassInformationPage"
             Title="수업 정보">
    <ContentPage.Content>
        <ListView x:Name="listView" ItemsSource="{Binding ListOfItems}" ItemTapped="listView_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <!--인덱스(숨김)-->
                            <Label
                                Text="{Binding index}"
                                IsVisible="False"
                                />
                            <!--수업명(왼쪽 위)-->
                            <Label 
                                Margin="10,0,10,0"
                                Text="{Binding coursename}"
                                Grid.Column="0" Grid.ColumnSpan="5"
                                Grid.Row="0" Grid.RowSpan="1"
                                TextColor="White"
                                FontSize="Medium"
                                HorizontalTextAlignment="Start"
                                VerticalTextAlignment="Center"
                                />
                            <!--진행 요일(오른쪽 위)-->
                            <Label 
                                Margin="10,0,10,0"
                                Text="{Binding classday}"
                                Grid.Column="5" Grid.ColumnSpan="5"
                                Grid.Row="0" Grid.RowSpan="1"
                                TextColor="White"
                                FontSize="Medium"
                                HorizontalTextAlignment="End"
                                VerticalTextAlignment="Center"
                                />
                            <!--수업 기간(왼쪽 아래)-->
                            <Label 
                                Margin="10,0,10,0"
                                Text="{Binding coursedate}"
                                Grid.Column="0" Grid.ColumnSpan="5"
                                Grid.Row="1" Grid.RowSpan="1"
                                TextColor="White"
                                HorizontalTextAlignment="Start"
                                VerticalTextAlignment="Center"
                                />
                            <!--수업 시간(오른쪽 아래)-->
                            <Label 
                                Margin="10,0,10,0"
                                Text="{Binding coursetime}"
                                Grid.Column="5" Grid.ColumnSpan="5"
                                Grid.Row="1" Grid.RowSpan="1"
                                TextColor="White"
                                HorizontalTextAlignment="End"
                                VerticalTextAlignment="Center"
                                />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>