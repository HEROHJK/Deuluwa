<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Deuluwa.AttendanceCheckPage"
             Title="출석 체크">
    <ContentPage.Content>
        <StackLayout>
            <Label 
                Text="NFC 카드를 태그하세요"
                TextColor="White"
                FontSize="Large"
                FontAttributes="Bold"
                Margin="20
                "/>
            <Label
                x:Name="latitude"
                Text="위도 : "
                TextColor="White"
                FontSize="Large"
                FontAttributes="Bold"
                Margin="20"
                />
            <Label
                x:Name="longitude"
                Text="경도 : "
                TextColor="White"
                FontSize="Large"
                FontAttributes="Bold"
                Margin="20"
                />
            <Label
                x:Name="qrCode"
                Text="QR CODE : "
                TextColor="White"
                FontSize="Large"
                FontAttributes="Bold"
                Margin="20"
                />
            <Button Text="QR코드로 출석하기"
                    VerticalOptions="EndAndExpand"/>
            <Button Text="뒤로가기"
                    Clicked="BackButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>